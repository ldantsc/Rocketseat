<!DOCTYPE html>

    <%- include('../partials/head'); %>
    
    <body class="container">

        <%- include('../partials/header'); %>

        <main>
            <div class="jumbotron">
                <h1>Node com EJS</h1>
                <p>Vamos aprender a trabalhar com arquivos EJS</p>
                <p><%= subtitle %></p>
            </div>
            <ul>
                <!--não esta usando o traço (%-) porque estamos usando código JS-->
                <!--Sintaxe para o html funcionar na função-->
                <% qualitys.forEach(function(quality) { %>
                    <li>
                        <p><strong><%= quality.title %></strong><%= quality.message %></p>
                    </li>
                <% }) %>
            </ul>
        </main>

        <%- include('../partials/footer'); %>

    </body>
</html>